<Project Sdk="Microsoft.NET.Sdk">

  <!-- Property Group for .NET Core Project -->
  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>netcoreapp2.0</TargetFramework>
  </PropertyGroup>

  <!-- Include Nuget Package for Tizen Project building -->
  <ItemGroup>
    <PackageReference Include="Tizen.NET" Version="4.0.0">
      <ExcludeAssets>Runtime</ExcludeAssets>
    </PackageReference>
    <PackageReference Include="Tizen.NET.Sdk" Version="1.0.1" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\..\src\Tizen.NET.MaterialComponents\Tizen.NET.MaterialComponents.csproj" />
  </ItemGroup>

  <ItemGroup>
    <TizenTpkUserIncludeFiles Include="$(SolutionDir)src\Tizen.NET.MaterialComponents\Theme\*.edj">
      <TizenTpkSubDir>res</TizenTpkSubDir>
    </TizenTpkUserIncludeFiles>
  </ItemGroup>

  <ItemGroup>
    <Compile Remove="Gallery\AAATESt.cs" />
    <Compile Remove="Gallery\CardsPage.cs" />
    <Compile Remove="Gallery\FloatingActionButtonPage.cs" />
    <Compile Remove="Gallery\MenusPage.cs" />
    <Compile Remove="Gallery\NavigationDrawerPage.cs" />
    <Compile Remove="Gallery\NavigationDrawerPageGroup.cs" />
    <Compile Remove="Gallery\NavigationViewPage.cs" />
    <Compile Remove="Gallery\SnackBarsPage.cs" />
    <Compile Remove="Gallery\TabsPage.cs" />
    <Compile Remove="Gallery\TooltipPage.cs" />
  </ItemGroup>
</Project>
